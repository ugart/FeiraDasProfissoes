<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

    <EditText
            android:id="@+id/campoEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:hint="Digite seu email aqui"
            android:inputType="textEmailAddress|textNoSuggestions"
            android:maxLines="1"
            android:textColor="#505050"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"/>

    <EditText
            android:id="@+id/campoSenha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Digite sua senha aqui"
            android:inputType="numberPassword|textNoSuggestions"
            android:maxLines="1"
            android:textColor="#505050"
            app:layout_constraintEnd_toEndOf="@+id/campoEmail"
            app:layout_constraintStart_toStartOf="@+id/campoEmail"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/campoEmail"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/irCadastroText" app:layout_constraintVertical_bias="0.26"
            android:textSize="18sp" android:textStyle="bold"/>
    <CheckBox
            android:text="Mantenha-me conectado"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/checkBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/campoSenha" android:gravity="center" android:checked="false"
            android:textSize="18sp"/>
    <TextView
            android:text="NÃ£o possuo cadastro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/irCadastroText" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent" android:gravity="center" android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>