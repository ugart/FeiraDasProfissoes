<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="CC"
            android:layout_width="124dp"
            android:layout_height="124"
            android:id="@+id/buttonCc" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonEc" android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="EC"
            android:layout_width="124"
            android:layout_height="124"
            android:id="@+id/buttonEc" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="ECA"
            android:layout_width="124"
            android:layout_height="124"
            android:id="@+id/buttonEca" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toStartOf="@+id/Ads"
            android:layout_marginEnd="54dp" android:layout_marginRight="54dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonCc" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSorteio"/>
    <Button
            android:text="ADS"
            android:layout_width="124"
            android:layout_height="122dp"
            android:id="@+id/Ads" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonEc" android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSorteio"/>
    <Button
            android:text="SORTEIO"
            android:layout_width="0dp"
            android:layout_height="69dp"
            android:id="@+id/buttonSorteio"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"/>

</android.support.constraint.ConstraintLayout>